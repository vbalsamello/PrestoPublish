@model IEnumerable<Presto.Models.Simulacion>


<li class="dropdown messages-menu">
    <!-- Menu toggle button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-save"></i>
        @if (Model.Count() != 0)
        {
            <span class="label label-success">@Model.Count()</span>
        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Últimas simulaciones</li>
        <li>

           
            <!-- inner menu: contains the messages -->
            <ul class="menu">

                @foreach (var item in Model)
                {
                    <li>
                        <!-- start notification -->
                        <a href=@Url.Action("Simulador","Simulaciones", new { id = item.ID})>
                            <div class="pull-left">
                                <!-- User Image -->
                                <i class="fa fa-users text-aqua"></i>
                            </div>
                            <h4>
                                @item.Nombre
                                @if (item.FechaModificacion.ToString("dd/MM/yyyy").Equals(DateTime.Today.ToString("dd/MM/yyyy")))
                                {

                                    <small><i class="fa fa-clock-o"></i> @item.FechaModificacion.ToString("hh:mm:ss")</small>
                                }
                                else
                                {
                                    <small><i class="fa fa-calendar"></i> @item.FechaModificacion.ToString("dd/MM/yyyy")</small>
                                }
                            </h4>
                            <!-- The message -->
                            <p>Prestamo: @Html.DisplayFor(model => item.Prestamo) (@item.Meses Meses)</p>
                        </a>
                    </li>
                }
                <!-- end notification -->
            </ul>
            <!-- /.menu -->
        </li>
        <li class="footer"><a href=@Url.Action("Index","Simulaciones")>Ver todas</a></li>
    </ul>
</li>




